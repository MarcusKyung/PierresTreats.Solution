@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
<hr>
<h1>Treats for @User.Identity.Name</h1>
<hr>
<div class="btn-group test-case" role="group" aria-label="Basic example">
  <button class="btn buttongroup-upper ">@Html.ActionLink("Sort by Price", "Index", new { sortOrder = "rating" })</button>
  <button class="btn buttongroup-upper">@Html.ActionLink("Sort by Name", "Index", new { sortOrder = "name" })</button>
</div>

@if (@Model.Count == 0)
{
  <h3>No Treats have been added yet!</h3>
} 
else
{
  <div class="row row-cols-2">
    @foreach (Treat treat in Model)
    {
      <div class="col">
        <div class="card treat-card">
          <div class="card-body">
            <h5 class="card-title treat-title">@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</h5>
          </div>
        </div>
      </div>
    }
  </div>
}

<hr>

<div class="btn-group" role="group">
  <button class="btn buttongroup-lower">@Html.ActionLink("Add New Treat", "Create")</button>
  <button class="btn buttongroup-lower">@Html.ActionLink("Home", "Index", "Home")</button>
</div>