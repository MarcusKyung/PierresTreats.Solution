@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
<hr>
<h1>Flavors</h1>
<hr>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 
else
{
  <div class="row row-cols-2">
    @foreach (Flavor flavor in Model)
    {
      <div class="col">
        <div class="card flavor-card">
          <div class="card-body">
            <h5 class="card-title flavor-title">@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</h5>
          </div>
        </div>
      </div>
    }
  </div>
}
<hr>
<div class="btn-group" role="group">
  <button class="btn buttongroup-lower">@Html.ActionLink("Add New Flavor", "Create")</button>
  <button class="btn buttongroup-lower">@Html.ActionLink("Home", "Index", "Home")</button>
</div>